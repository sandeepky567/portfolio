  <style>
    body {
      padding-top: 1rem;
    }

    /* Navbar Styling */
    nav {
      background: var(--card-bg);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border-color);
      padding: 0 2rem;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      display: flex;
      align-items: center;
      justify-content: space-between;
      transition: all 0.3s ease;
      height: var(--nav-height);
    }

    nav .logo {
      font-size: 1.4rem;
      font-weight: 700;
      color: var(--primary-color);
      text-decoration: none;
      letter-spacing: 1px;
      background: linear-gradient(135deg, var(--primary-color), #60a5fa);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    nav .nav-links {
      display: flex;
      gap: 2rem;
      margin: 0;
      padding: 0;
      list-style: none;
    }

    nav .nav-links a {
      color: var(--secondary-color);
      text-decoration: none;
      font-weight: 600;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      transition: all 0.3s ease;
    }

    nav .nav-links a:hover {
      color: var(--primary-color);
      background: rgba(74, 222, 128, 0.1);
    }

    nav .nav-links a.active {
      color: var(--primary-color);
      background: rgba(74, 222, 128, 0.15);
    }

    /* Project-specific styles */
    nav {
      background: var(--card-bg);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border-color);
      padding: 1rem 2rem;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      transition: all 0.3s ease;
    }

    nav .logo {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--primary-color);
      text-decoration: none;
      letter-spacing: 1px;
    }

    nav .nav-links {
      display: flex;
      gap: 2rem;
      margin: 0;
      padding: 0;
      list-style: none;
    }

    nav .nav-links a {
      color: var(--secondary-color);
      text-decoration: none;
      font-weight: 500;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      transition: all 0.3s ease;
    }

    nav .nav-links a:hover {
      color: var(--primary-color);
      background: rgba(74, 222, 128, 0.1);
    }

    nav .nav-links a.active {
      color: var(--primary-color);
      background: rgba(74, 222, 128, 0.15);
    }

    /* Animated background particles */
    .particles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 0;
    }
    .particle {
      position: absolute;
      width: 4px;
      height: 4px;
      background: radial-gradient(circle, var(--primary-color) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s infinite ease-in-out;
      opacity: 0.6;
    }
    @keyframes float {
      0%, 100% { transform: translateY(0) translateX(0); }
      25% { transform: translateY(-30px) translateX(10px); }
      50% { transform: translateY(-60px) translateX(-10px); }
      75% { transform: translateY(-30px) translateX(5px); }
    }

    /* Dark theme text and card styles */
    .text-header-dark { color: #fff !important; }
    .text-gray-600, .text-gray-500 { color: var(--secondary-color) !important; }
    .text-accent { color: var(--primary-color) !important; }
        
    /* Project cards dark theme */
    .bg-white {
      background: var(--card-bg) !important;
      border: 1px solid var(--border-color) !important;
      box-shadow: 0 10px 30px rgba(0,0,0,0.12) !important;
    }
    .bg-white:hover {
      border-color: rgba(74,222,128,0.22) !important;
      transform: translateY(-6px) !important;
    }
        
    /* Text colors */
    .text-gray-700, .project-details li { color: var(--secondary-color) !important; }
    h4.text-3xl { color: var(--primary-color) !important; }
    .border-gray-100, .border-gray-300 { border-color: var(--border-color) !important; }
        
    /* Buttons */
    .bg-accent {
      background: linear-gradient(to right, #007bff, var(--primary-color)) !important;
      color: var(--bg-dark) !important;
    }
    .bg-header-dark {
      background: var(--card-bg) !important;
      color: var(--primary-color) !important;
      border: 1px solid var(--border-color) !important;
    }
        
    /* Image container */
    .bg-gray-100 {
      background: var(--card-bg) !important;
      border: 1px solid var(--border-color) !important;
    }
        
    /* Project details */
    .project-details strong {
      color: var(--code-highlight) !important;
    }
        
    @media (max-width: 768px) {
      body {
        padding-left: 1rem;
        padding-top: 5rem;
      }
    }
  </style>

  <!-- Projects content injected from Tailwind-based template -->
  <main class="projects container">
    <div id="app" class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header/Introduction Section -->
      <div class="pt-8 pb-12">
        <h1 class="text-6xl sm:text-7xl font-black mb-6 text-header-dark leading-tight tracking-tight">
          My Development <span class="text-accent bg-gradient-to-r from-primary-500 to-accent bg-clip-text">Journey</span>
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mt-4 leading-relaxed">
          Each project represents a milestone in my development journey, showcasing growth and mastery over different technologies and concepts.
        </p>
      </div>

      <!-- Project List Section -->
      <section id="project-list" class="pb-20">
        <div id="projects-grid" class="space-y-12"></div>
      </section>
    </div>

    <!-- Tailwind CDN (kept local theme via our CSS but Tailwind used for quick layout) -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: { sans: ['Inter', 'sans-serif'] },
            colors: { 'accent': '#8a63d2', 'header-dark': '#212529' }
          }
        }
      }
    </script>

    <script>
      const projectsData = [
        {
          title: "BookMyHotel: Hotel Booking Web Application",
          date: "July - Oct 2025",
          summary: "A full-stack hotel booking platform built using the MERN stack with a clean MVC architecture.",
          details: [
            "Developed a full-stack application using **Node.js, Express.js, MongoDB, and JavaScript** stack, implementing a clean **MVC architecture**.",
            "Engineered robust **CRUD functionality** for property listings, complemented by comprehensive **User Authentication and Authorization** features (login/signup, host/guest roles).",
            "Designed optimized MongoDB queries for multi-parameter search.",
            "Integrated **Cloudinary** for scalable asset delivery and **TailwindCSS** for a responsive UI."
          ],
          tags: ["Node.js", "Express.js", "MongoDB", "JavaScript", "MVC", "Cloudinary", "Tailwind CSS"],
          liveUrl: "#",
          githubUrl: "#",
          imageUrl: "https://placehold.co/150x150/f9fafb/6b7280?text=BookMyHotel+UI"
        },
        {
          title: "EasyEMI: Financial Calculation and Loan Management Utility",
          date: "Sept 2025",
          summary: "A specialized financial utility for high-accuracy EMI calculation and core loan management.",
          details: [
            "Engineered a specialized financial utility for high-accuracy **EMI calculation** and core **loan amortization**.",
            "Organized features modularly for planning and refinancing.",
            "Designed a user-centric UI and integrated an **EasyEMI Bot** to provide immediate support and enhance the overall loan exploration experience.",
            "The core utility was developed in a 12-hour sprint, implementing financial formulas and a modular, component-based frontend architecture."
          ],
          tags: ["JavaScript", "HTML5", "CSS3", "Financial Formulas", "AI/Bot Integration", "Responsive Design"],
          liveUrl: "#",
          githubUrl: "#",
          imageUrl: "https://placehold.co/150x150/f9fafb/6b7280?text=EMI+Dashboard"
        }
      ];

      function renderProjects() {
        const grid = document.getElementById('projects-grid');
        if (!grid) return;
        grid.innerHTML = '';

        projectsData.forEach(project => {
          const tagHtml = project.tags.map(tag => `<span class="text-xs text-gray-500 mr-3 mt-1 inline-block">${tag}</span>`).join(' • ');
          const detailsHtml = project.details.map(detail => `<li class="mb-2 leading-relaxed text-gray-700">${detail}</li>`).join('');

          const projectCard = `
            <div class="bg-white p-6 md:p-8 rounded-xl shadow-lg border border-gray-100 transition duration-300 hover:shadow-xl hover:scale-[1.005]">
              <div class="flex flex-col md:flex-row">
                <div class="flex-1 md:pr-10 order-2 md:order-1">
                  <div class="flex flex-col sm:flex-row justify-between sm:items-center mb-2">
                    <h4 class="text-3xl font-bold text-header-dark">${project.title}</h4>
                    <p class="text-sm text-gray-500 whitespace-nowrap pt-1">${project.date}</p>
                  </div>
                  <p class="text-xl font-medium text-gray-700 mb-6">${project.summary}</p>
                  <ul class="list-none space-y-3 mb-8 pl-0 project-details">${detailsHtml}</ul>
                  <div class="text-sm font-semibold text-gray-500 border-t pt-4 mt-6">${tagHtml}</div>
                </div>
                <div class="md:w-64 mt-6 md:mt-0 flex flex-col items-center justify-start space-y-4 md:space-y-6 order-1 md:order-2">
                  <div class="w-full bg-gray-100 border border-gray-300 rounded-lg p-3 shadow-inner">
                    <img src="${project.imageUrl}" alt="Project Diagram for ${project.title}" class="w-full h-auto object-cover rounded-md">
                  </div>
                  <a href="${project.liveUrl}" target="_blank" rel="noopener noreferrer" class="w-full text-center bg-accent text-white font-semibold py-3 rounded-lg shadow-md hover:bg-blue-600 transition duration-300 flex items-center justify-center space-x-2 transform hover:scale-[1.01] active:scale-[0.99]"><span>Demo</span><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" /></svg></a>
                  <a href="${project.githubUrl}" target="_blank" rel="noopener noreferrer" class="w-full text-center bg-header-dark text-white font-semibold py-3 rounded-lg shadow-md hover:bg-gray-700 transition duration-300 transform hover:scale-[1.01] active:scale-[0.99]">View Code</a>
                </div>
              </div>
            </div>
          `;
          grid.innerHTML += projectCard;
        });
      }

      window.onload = function() {
        renderProjects();
        createParticles();
      };
    </script>
  </main>

  <!-- Particles Animation Script -->
  <script>
    function createParticles() {
      const container = document.getElementById('particles');
      const particleCount = 50;

      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.top = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 8 + 's';
        particle.style.animationDuration = (Math.random() * 5 + 5) + 's';
        container.appendChild(particle);
      }
    }
  </script>
